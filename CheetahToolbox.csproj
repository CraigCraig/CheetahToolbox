<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>true</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
        <Platforms>Windows;Linux</Platforms>
        <Configurations>Debug;Release</Configurations>
        <Version>1.0.0</Version>
        <OutDir>$(SolutionDir)Builds\</OutDir>
        <ApplicationIcon>Resources\favicon.ico</ApplicationIcon>
        <RepositoryUrl>https://github.com/CraigCraig/CheetahToolbox</RepositoryUrl>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Platform)' == 'Windows' ">
        <DefineConstants>$(DefineConstants);WINDOWS</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Platform)' == 'Linux' ">
        <DefineConstants>$(DefineConstants);LINUX</DefineConstants>
    </PropertyGroup>

    <!-- Workflows -->
    <ItemGroup>
        <None Include=".github\workflows\*.yml" />
    </ItemGroup>

    <!-- Hide Builds -->
    <ItemGroup>
        <Compile Remove="Builds\**" />
        <EmbeddedResource Remove="Builds\**" />
        <None Remove="Builds\**" />
    </ItemGroup>

    <!-- References -->
    <ItemGroup>
        <!-- ClieWrap -->
        <PackageReference Include="CliWrap" Version="3.6.5-test" />
        <!-- Newtonsoft.Json -->
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    </ItemGroup>

</Project>