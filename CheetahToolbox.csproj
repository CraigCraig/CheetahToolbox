<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
        <ImplicitUsings>true</ImplicitUsings>
		<Nullable>enable</Nullable>
		<LangVersion>latest</LangVersion>
		<Platforms>Windows;Linux</Platforms>
		<Configurations>Debug;Release</Configurations>
		<Version>1.0.0</Version>
		<UseWindowsForms>true</UseWindowsForms>
        <OutDir>$(SolutionDir)Builds\</OutDir>
        <ApplicationIcon>Resources\favicon.ico</ApplicationIcon>
        <RepositoryUrl>https://github.com/CraigCraig/CheetahToolbox</RepositoryUrl>
	</PropertyGroup>

    <!-- Windows -->
	<PropertyGroup Condition=" '$(Platform)' == 'Windows' ">
		<DefineConstants>$(DefineConstants);WINDOWS</DefineConstants>
	</PropertyGroup>

    <!-- Linux -->
	<PropertyGroup Condition=" '$(Platform)' == 'Linux' ">
		<DefineConstants>$(DefineConstants);LINUX</DefineConstants>
	</PropertyGroup>

    <!-- Workflows -->
	<ItemGroup>
		<None Include=".github\workflows\*.yml" />
	</ItemGroup>

    <!-- Hide Builds -->
    <ItemGroup>
        <Compile Remove="Builds\**" />
        <Compile Remove="WinToolbox\obj\**" />
        <EmbeddedResource Remove="Builds\**" />
        <EmbeddedResource Remove="WinToolbox\obj\**" />
        <None Remove="Builds\**" />
    </ItemGroup>

    <!-- Hide CheetahUtils -->
    <ItemGroup>
        <Compile Remove="CheetahUtils\**" />
        <EmbeddedResource Remove="CheetahUtils\**" />
        <None Remove="CheetahUtils\**" />
        <None Remove="WinToolbox\obj\**" />
    </ItemGroup>

    <!-- References -->
	<ItemGroup>
        <!-- CliWrap -->
        <PackageReference Include="CliWrap" Version="3.6.5-test" />
        <!-- Newtonsoft.Json -->
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
        <!-- Win-->
	</ItemGroup>
	<ItemGroup>
	  <Folder Include="WinToolbox\" />
	</ItemGroup>

</Project>